{% extends 'base.html.twig' %}

{% block title %}Booking{% endblock %}

{% block body %}
    <h1>Booking</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ booking.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ booking.nom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ booking.email }}</td>
            </tr>
            <tr>
                <th>Num_mobile</th>
                <td>{{ booking.numMobile }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ booking.Date ? booking.Date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Heure</th>
                <td>{{ booking.heure ? booking.heure|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Nombre_de_particpant</th>
                <td>{{ booking.nombreDeParticpant }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('booking_index') }}">back to list</a>

    <a href="{{ path('booking_edit', {'id': booking.id}) }}">edit</a>

    {{ include('booking/_delete_form.html.twig') }}
{% endblock %}
